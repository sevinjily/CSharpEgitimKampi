@model List<Category> 
<a href="/admin/category/create" class="btn btn-success">Create</a>
@{
    int counter = 0;
}
<table class="table table-dark">
<thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/admin/category/edit/@item.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
</tbody>
</table>