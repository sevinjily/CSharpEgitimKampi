@model Tag
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
}
<form method="post">
    @* <div asp-validation-summary="All" class="alert-danger"></div> *@
    <div class="form-group">

<label asp-for="TagName">TagName</label>
<input type="text" asp-for="TagName" class="form-control"/>
<span asp-validation-for="TagName" class="text-danger"></span>@*//Tagname ile bagli error olsa cixartmasi ucun yazilib*@
<button type="submit" class="btn btn-success btn-block w-100 btn-lg">Create</button>
    </div>
</form>
@* //controllerden  view-a tempData,ViewBag,ViewData,model*@
@* view-dan controllore ya name ile ya da asp-for ile gonderirik*@


